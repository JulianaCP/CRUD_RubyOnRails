<div class="container container_padding">
    <%= button_to "Create product", new_product_path, method: :get, :class => 'btn btn-primary btn-lg float-right container_margin'  %>

    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name%></td>
              <td><%= product.description%></td>
              <td>
              
              
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @products.empty? %>
        <div class="alert alert-info">Nothing here yet</div>
      <% end %> 
</div>